<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <import resource="loggers.xml"/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:client.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="false" />
        <!--<property name="systemPropertiesMode" value="override"/>-->
    </bean>

    <bean id="client" class="my.epam.spring.core.beans.Client">
        <constructor-arg value="{$id}"/>
        <constructor-arg value="{$name}"/>
        <property name="greeting" value="{$greeting}"/>
    </bean>

    <bean id="app" class="my.epam.spring.core.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileLogger"/>
        <constructor-arg>
            <map>
                <entry key="INFO" value-ref="eventLogger"/>
                <entry key="ERROR" value-ref="fileLogger"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="event" class="my.epam.spring.core.beans.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>



</beans>